PREFIX : <https://linked.data.gov.au/def/location-addressing/shapes/>
PREFIX cn: <https://linked.data.gov.au/def/cn/>
PREFIX lc: <https://linked.data.gov.au/def/lifecycle/>
PREFIX ns1: <urn:form:>
PREFIX rnpt: <https://linked.data.gov.au/def/road-name-part-types/>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX roads: <https://linked.data.gov.au/def/roads/>
PREFIX sdo: <https://schema.org/>
PREFIX sh: <http://www.w3.org/ns/shacl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

:CompoundName-isNameFor
    a sh:PropertyShape ;
    sh:minCount 1 ;
    sh:nodeKind sh:IRI ;
    sh:path cn:isNameFor ;
.

:RoadLabel-rule-required
    a sh:NodeShape ;
    sh:property
        [
            sh:message "Road name is required." ;
            sh:node [
                    sh:not [
                            sh:path rdf:value ;
                            sh:pattern "^$"
                        ]
                ] ;
            sh:path sdo:hasPart ;
            sh:qualifiedMaxCount 1 ;
            sh:qualifiedMinCount 1 ;
            sh:qualifiedValueShape [
                    sh:hasValue rnpt:RoadGivenName ;
                    sh:path sdo:additionalType
                ] ;
            ns1:field "road-name"
        ] ,
        [
            sh:message "A road label must have at least 1 lifecycle stage." ;
            sh:path lc:hasLifecycleStage ;
            sh:minCount 1
        ] ,
        [
            sh:message "All lifecycle stages must have a status." ;
            sh:path lc:hasLifecycleStage ;
            sh:node [
                sh:property [
                    sh:path sdo:additionalType ;
                    sh:minCount 1 ;
                    sh:maxCount 1
                ]
            ]
        ] ,
        [
            sh:message "The road label parts cannot be empty." ;
            sh:minCount 1 ;
            sh:path sdo:hasPart
        ] ,
        [
            sh:maxCount 3 ;
            sh:message "The road label parts cannot have more than 3 parts." ;
            sh:path sdo:hasPart
        ] ,
        [
            sh:message "The road label parts must be one of the following types. ( rnpt:RoadGivenName rnpt:RoadType rnpt:RoadSuffix )" ;
            sh:node [
                    sh:property [
                            sh:in (
                                    rnpt:RoadGivenName
                                    rnpt:RoadType
                                    rnpt:RoadSuffix
                                ) ;
                            sh:path sdo:additionalType
                        ]
                ] ;
            sh:path sdo:hasPart
        ] ;
    sh:sparql [
            sh:message "There must be exactly 1 lifecycle stage with no end date. See label with IRI {?this}." ;
            sh:select """
            PREFIX lc: <https://linked.data.gov.au/def/lifecycle/>
            PREFIX time: <http://www.w3.org/2006/time#>
            SELECT *
            WHERE {
                {
                    SELECT $this (SUM(?hasTimeEnd) AS ?sum)
                    WHERE {
                        $this lc:hasLifecycleStage ?lcStage .
                        BIND(
                            IF(
                                EXISTS {
                                    ?lcStage time:hasEnd ?timeEnd .
                                },
                                0,
                                1
                            )
                            AS ?hasTimeEnd
                        )
                    }
                    GROUP BY $this
                }

                FILTER(?sum != 1)
            }
        """
        ] ;
    sh:targetClass roads:RoadLabel ;
.

:RoadLabel-rule-the
    a sh:NodeShape ;
    sh:message "Road name cannot be named 'The'." ;
    sh:not [
            sh:flags "i" ;
            sh:path rdf:value ;
            sh:pattern "^the$"
        ] ;
    sh:target [
            a sh:SPARQLTarget ;
            sh:select """
            PREFIX rnpt: <https://linked.data.gov.au/def/road-name-part-types/>
            PREFIX sdo: <https://schema.org/>
            SELECT $this
            WHERE {
                $this sdo:additionalType rnpt:RoadGivenName .
            }
        """
        ] ;
    ns1:field "road-name" ;
.

:RoadObject
    a sh:NodeShape ;
    sh:property
        :RoadObject-identifier ,
        :RoadObject-name ;
    sh:targetClass roads:RoadObject ;
.

:CompoundName-label
    a sh:PropertyShape ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
    sh:nodeKind sh:Literal ;
    sh:path rdfs:label ;
.

:RoadLabel
    a sh:NodeShape ;
    sh:class
        cn:CompoundName ,
        roads:RoadLabel ;
    sh:property :CompoundName-label ;
.

:RoadObject-identifier
    a sh:PropertyShape ;
    sh:datatype <urn:ladb:sir-id> ;
    sh:description "RoadObject identifiers must be an RDF literal with the datatype urn:ladb:sir-id." ;
    sh:nodeKind sh:Literal ;
    sh:path sdo:identifier ;
.

:RoadObject-name
    a sh:PropertyShape ;
    sh:node :RoadLabel ;
    sh:nodeKind sh:IRI ;
    sh:path sdo:name ;
.

